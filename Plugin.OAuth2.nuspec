<?xml version="1.0"?>
<package >
  <metadata minClientVersion="3.0.0">
    <id>Xam.Plugin.OAuth2</id>
    <version>$version$</version>
    <authors>Alberto Fustinoni</authors>
    <owners>Alberto Fustinoni</owners>
    <licenseUrl>https://raw.githubusercontent.com/Aftnet/OIDCBroker/master/License.txt</licenseUrl>
    <projectUrl>https://github.com/Aftnet/OIDCBroker</projectUrl>
    <iconUrl>https://github.com/Aftnet/OAuth2Plugin/raw/master/Icon.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Handles OAuth2 code flow to get authorization tokens from OpenID Connect providers, spawning a web browser for interactive authentication as needed.</description>
    <copyright>Copyright 2017</copyright>
    <tags>OpenID-Connect OAuth2</tags>
    <dependencies>
      <dependency id="IdentityModel" version="2.16.0" />
    </dependencies>
  </metadata>
  <files>
    <!--Core-->
    <file src="Plugin.OAuth2\bin\$configuration$\netstandard1.4\Plugin.OAuth2.*" target="lib\netstandard1.4" />
    <!--UWP-->
    <file src="Plugin.OAuth2.UWP\bin\$configuration$\Plugin.OAuth2.*" target="lib\uap10" />
    <!--Desktop Windows-->
    <file src="Plugin.OAuth2.Net46\bin\$configuration$\Plugin.OAuth2.*" target="lib\net46" />
    <!--Xamarin.iOS-->
    <file src="Plugin.OAuth2.iOS\bin\$configuration$\Plugin.OAuth2.*" target="lib\Xamarin.iOS10" />
    <!--Xamarin.Android-->
    <file src="Plugin.OAuth2.Android\bin\$configuration$\Plugin.OAuth2.*" target="lib\MonoAndroid10" />
  </files>
</package>